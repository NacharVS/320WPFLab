<Window x:Class="Mongo.PickDuty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mongo"
        mc:Ignorable="d"
        Title="PickDuty" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="firstStudent" HorizontalAlignment="Center" Margin="0,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Justify" VerticalContentAlignment="Center" Height="70" Width="200" FontSize="20"/>
        <TextBox x:Name="secondStudent" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Justify" VerticalContentAlignment="Center" Height="70" Width="200" FontSize="20"/>
        <Button x:Name="repick_Btn" Content="Перевыбрать" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Height="64" Width="200" FontSize="20" Click="repick_Btn_Click"/>

    </Grid>
</Window>
