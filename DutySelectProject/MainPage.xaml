<Page x:Class="DutySelectProject.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DutySelectProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="student1" Width="300" Height="60"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="0" x:Name="student2" Width="300" Height="60"></TextBox>
        <Button Grid.Column="0" Grid.Row="3" x:Name="btnOk" Grid.ColumnSpan="2" Content="OK" Width="100" Height="50" Click="btnOk_Click"></Button>
    </Grid>
    
</Page>
