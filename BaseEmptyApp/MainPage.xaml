<Page x:Class="BaseEmptyApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BaseEmptyApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btn_Archer" Content="Archer" Grid.Row="2" Grid.Column="0" Click="btn_Archer_Click" Background="Red" BorderBrush="White"/>
        <Button x:Name="btn_Mage" Content="Mage" Grid.Row="2" Grid.Column="1" Click="btn_Mage_Click" BorderBrush="White" Foreground="Black" Background="Red"/>
        <Button x:Name="btn_Warrior" Content="Warrior" Grid.Row="2" Grid.Column="2" Click="btn_Warrior_Click" Background="Red" BorderBrush="White"/>
    </Grid>
</Page>
