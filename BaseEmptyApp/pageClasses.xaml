<Page x:Class="BaseEmptyApp.pageClasses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BaseEmptyApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pageClasses">

    <Grid>
       

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="650" Height="400">
            <Button x:Name="Mage" Grid.Row="1" FontFamily="Lucida Calligraphy" FontSize="18" Background="#FFA0D0F1" Content="Mage" Margin="10" Height="30" Click="Mage_Click"></Button>
            <Button x:Name="Warrior" Grid.Row="0" FontFamily="Lucida Calligraphy" FontSize="18" Background="#FFA0D0F1" Content="Warrior" Margin="10" Height="30" Click="Warrior_Click"></Button>
            <Button x:Name="Archer" Grid.Row="2" FontFamily="Lucida Calligraphy" FontSize="18" Background="#FFA0D0F1" Content="Archer" Margin="10" Height="30" Click="Archer_Click"></Button>
        </StackPanel>
        
    </Grid>
</Page>
