<Window x:Class="BaseEmptyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseEmptyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добро пожаловать в Редактор Персонажа" Grid.ColumnSpan="5" FontSize="25" TextAlignment="Center"/>
        <Button x:Name="Archer" Grid.Row="5" Content="Create Archer" Click="Archer_Click"/>
        <Button x:Name="Warrior" Grid.Row="5" Grid.Column="2" Content="Create Warrior" Click="Warrior_Click"/>
        <Button x:Name="Mage" Grid.Row="5" Grid.Column="4" Content="Create Mage" Click="Mage_Click"/>
        
    </Grid>
</Window>
