<Window x:Class="BaseEmptyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseEmptyApp"
        mc:Ignorable="d"
        Title="The Game" MaxHeight="450" MaxWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ChooseWarriorBtn" Grid.Column="0" Content="Warrior" Margin="30 10 30 10" Click="ChooseWarriorBtn_Click"/>
            <Button x:Name="ChooseMageBtn" Grid.Column="1" Content="Mage" Margin="30 10 30 10" Click="ChooseMageBtn_Click"/>
            <Button x:Name="ChooseArcherBtn" Grid.Column="2" Content="Archer" Margin="30 10 30 10" Click="ChooseArcherBtn_Click"/>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="NameTB" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>


                <Grid Grid.Column="0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="141"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="StrengthTB" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="DexterityTB" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="PAttackTB" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="PResistTB" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="PhysCritChanceTB" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="PhysCritDamageTB" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="HealthTB" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                    <Button x:Name="StrengthDownBtn" Grid.Column="0" Grid.Row="1" Click="StrengthDownBtn_Click" Margin="5 9" Content="-"/>
                    <Button x:Name="DexDownBtn" Grid.Column="0" Grid.Row="2" Click="DexDownBtn_Click" Margin="5 9" Content="-"/>
                    <Button x:Name="StrengthUpBtn" Grid.Column="2" Grid.Row="1" Click="StrengthUpBtn_Click" Margin="5 9" Content="+"/>
                    <Button x:Name="DexUpBtn" Grid.Column="2" Grid.Row="2" Click="DexUpBtn_Click" Margin="5 9" Content="+"/>
                    <Label Grid.Column="1" Content="Strength" HorizontalAlignment="Left" Margin="10,9,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="Dexterity" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="P. Attack" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="P. Resist" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="4" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="P. Crit Chance" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="5" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="88"/>
                    <Label Grid.Column="1" Content="P. Crit Dmg" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="6" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="Health" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="2" Content="Strength" HorizontalAlignment="Left" Margin="96,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                </Grid>


                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="ManaTB" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ConstitutionTB"  Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="IntelligenceTB" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="MAttackTB" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="MResistTB" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="MagCritChanceTB" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock x:Name="MagCritDamageTB" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                    <Button x:Name="ConstDownBtn" Grid.Column="0" Grid.Row="1" Click="ConstDownBtn_Click" Margin="5 9" Content="-"/>
                    <Button x:Name="IntelDownBtn" Grid.Column="0" Grid.Row="2" Click="IntelDownBtn_Click" Margin="5 9" Content="-"/>
                    <Button x:Name="ConstUpBtn" Grid.Column="2" Grid.Row="1" Click="ConstUpBtn_Click" Margin="5 9" Content="+"/>
                    <Button x:Name="IntelUpBtn" Grid.Column="2" Grid.Row="2" Click="IntelUpBtn_Click" Margin="5 9" Content="+"/>
                    <Label Grid.Column="1" Content="Cobstitution" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="Intelligence" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="M. Attack" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="M. Resist" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="4" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="M. Crit Chance" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="5" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="88"/>
                    <Label Grid.Column="1" Content="M. Crit Dmg" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="6" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                    <Label Grid.Column="1" Content="Mana" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="-0.413,0.239" Width="78"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="ExtraPointsTB" Grid.Row="0" Margin="31,162,31,0" HorizontalAlignment="Center" FontSize="15"/>
                <Button x:Name="PlusExtrtaBtn" Margin="31,192,31,130" Grid.RowSpan="2" Content="+5" Click="PlusExtrtaBtn_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
