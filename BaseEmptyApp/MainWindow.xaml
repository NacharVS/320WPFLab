<Window x:Class="BaseEmptyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseEmptyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <ListView x:Name="cb_char_type" FontSize="20" SelectionChanged="cb_char_type_SelectionChanged">
                    <TextBlock Text="Warior" FontSize="20"/>
                    <TextBlock Text="Mage" FontSize="20"/>
                    <TextBlock Text="Archer" FontSize="20"/>
                </ListView>
                <Button x:Name="btn_create" Content="Create new character" FontSize="20" Click="btn_create_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
