<Page x:Class="BaseEmptyApp.CharacterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BaseEmptyApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CharacterPage" Background="Violet">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1" DataContext="{Binding Character}">
            <TextBlock Text="Strength"/>
            <TextBox Text="{Binding Strength}"/>
            <TextBlock Text="Dexterity"/>
            <TextBox Text="{Binding Dexterity}"/>
            <TextBlock Text="Intelligence"/>
            <TextBox Text="{Binding Intelligence}"/>
            <TextBlock Text="Constitution"/>
            <TextBox Text="{Binding Constitution}"/>
        </StackPanel>
        
    </Grid>
    
</Page>
