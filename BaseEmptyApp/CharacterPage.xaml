<Page x:Class="BaseEmptyApp.CharacterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BaseEmptyApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CharacterPage">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ScrollViewer Name="scroll" CanContentScroll="True" Grid.Column="1" Grid.Row="1">
            <StackPanel  DataContext="{Binding Character}">
                <TextBlock x:Name="TbLabel" TextAlignment="Center"/>
                <TextBlock Text="Strength"/>
                <TextBox x:Name="TbStrength"/>
                <TextBlock Text="Dexterity"/>
                <TextBox x:Name="TbDexterity"/>
                <TextBlock Text="Intelligence"/>
                <TextBox x:Name="TbIntelligence"/>
                <TextBlock Text="Constitution"/>
                <TextBox x:Name="TbConstitution"/>
                <TextBlock Text="Health"/>
                <TextBox x:Name="TbHealth" IsEnabled="False"/>
                <TextBlock Text="Mana"/>
                <TextBox x:Name="TbMana" IsEnabled="False"/>

                <TextBlock Text="Physics" TextAlignment="Center"/>

                <TextBlock Text="Attack"/>
                <TextBox x:Name="TbPhAttack" IsEnabled="False"/>
                <TextBlock Text="Defense"/>
                <TextBox x:Name="TbPhDefense" IsEnabled="False"/>
                <TextBlock Text="CriticalChance"/>
                <TextBox x:Name="TbPhCritChance" IsEnabled="False"/>
                <TextBlock Text="CriticalDamage"/>
                <TextBox x:Name="TbPhCritDamage" IsEnabled="False"/>

                <TextBlock Text="Magic" TextAlignment="Center"/>

                <TextBlock Text="Attack"/>
                <TextBox x:Name="TbMagAttack" IsEnabled="False"/>
                <TextBlock Text="Defense"/>
                <TextBox x:Name="TbMagDefense" IsEnabled="False"/>
                <TextBlock Text="CriticalChance"/>
                <TextBox x:Name="TbMagCritChance" IsEnabled="False"/>
                <TextBlock Text="CriticalDamage"/>
                <TextBox x:Name="TbMagCritDamage" IsEnabled="False"/>

                <Button x:Name="BtnChange" Content="Change" FontSize="20" Margin="10" Click="BtnChange_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
