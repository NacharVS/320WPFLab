            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Image Source="C:\Users\danil\Source\Repos\320WPFLab\BaseEmptyApp\images\warrior.png" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="237" Margin="-2,-12,0,0"/>
